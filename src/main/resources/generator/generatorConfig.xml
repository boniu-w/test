<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <properties resource="application-test.properties" />

    <context id="Mysql" defaultModelType="flat">
        <property name="beginningDelimiter" value="`" />
        <property name="endingDelimiter" value="`" />
        <commentGenerator>
            <!-- 添加 db 表中字段的注释 -->
            <property name="suppressDate" value="true" />
            <property name="addRemarkComments" value="true" />
        </commentGenerator>

        <jdbcConnection driverClass="${spring.datasource.driver-class-name}"
                        connectionURL="${spring.datasource.url}"
                        userId="${spring.datasource.username}"
                        password="${spring.datasource.password}">
            <property name="useInformationSchema" value="true" />
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaModelGenerator targetPackage="wg.application.entity" targetProject="src/main/java" />

<!--        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources" />-->
        <sqlMapGenerator targetPackage="wg.application.dao" targetProject="src/main/java" />

        <javaClientGenerator targetPackage="wg.application.dao" targetProject="src/main/java" type="XMLMAPPER" />

        <table tableName="user">
            <!-- <ignoreColumn column="create_time" />
            <ignoreColumn column="update_time" /> -->
            <!--mysql 配置-->
            <!-- <generatedKey column="id" sqlStatement="Mysql" identity="true"/> -->
            <!--oracle 配置-->
            <!--<generatedKey column="id" sqlStatement="select SEQ_{1}.nextval from dual" identity="false" type="pre"/>-->
        </table>
    </context>
</generatorConfiguration>